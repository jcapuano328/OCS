<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dice="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingBottom="10dp">
        
            <TextView
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="center" />
            
            <TextView
                android:text="Attack"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="center" />
            
            <TextView
                android:text="Defend"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="center" />
            
            <TextView
                android:text="Terrain"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_weight=".40"
                android:layout_height="wrap_content"
                android:gravity="center" />
            
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:paddingBottom="5dp">
            <TextView
                android:text="Armor"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="left" />
            
            <EditText
                android:id="@+id/edtGroundAttackArmor"
                android:inputType="numberDecimal"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="center" />
            
            <EditText
                android:id="@+id/edtGroundDefendArmor"
                android:inputType="numberDecimal"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="center" />
            
            <Spinner
                android:id="@+id/spinGroundTerrain" 
                android:layout_width="0dp"
                android:layout_weight=".40"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            
        </LinearLayout>
            
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:paddingBottom="5dp">
            <TextView
                android:text="Mech"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="left" />
            
            <EditText
                android:id="@+id/edtGroundAttackMech"
                android:inputType="numberDecimal"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="center" />
            
            <EditText
                android:id="@+id/edtGroundDefendMech"
                android:inputType="numberDecimal"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="center" />
            
            <Spinner
                android:id="@+id/spinGroundTerrainBtween" 
                android:layout_width="0dp"
                android:layout_weight=".40"
                android:layout_height="wrap_content" 
                android:gravity="center" />
            
        </LinearLayout>
            
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:paddingBottom="5dp">
            <TextView
                android:text="Other"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="left" />
            
            <EditText
                android:id="@+id/edtGroundAttackOther"
                android:inputType="numberDecimal"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="center" />
            
            <EditText
                android:id="@+id/edtGroundDefendOther"
                android:inputType="numberDecimal"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="center" />
            <TextView
                    android:id="@+id/txtGroundOdds"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="1:1"
                    android:layout_width="0dp"
                    android:layout_weight=".40"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

        </LinearLayout>
            
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:paddingBottom="5dp">
            <TextView
                android:text="AR"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="left" android:layout_gravity="center_vertical"/>
            <Spinner
                android:id="@+id/spinGroundAttackAR" 
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content" 
                android:gravity="center" />
            <Spinner
                android:id="@+id/spinGroundDefendAR" 
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content" 
                android:gravity="center" />

            <TextView
                    android:text="Hedgehog"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:layout_height="wrap_content"
                    android:gravity="left" android:layout_gravity="center_vertical"/>
            <Spinner
                    android:id="@+id/spinGroundDefendHedgehog"
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

        </LinearLayout>
            
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:paddingBottom="5dp">
            <TextView
                android:text="Combat"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <CheckBox
                android:id="@+id/checkGroundAttackCombat" 
                android:text=""
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content" 
                android:gravity="center" />
            
            <CheckBox
                android:id="@+id/checkGroundDefendCombat" 
                android:text=""
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content" 
                android:gravity="center" />

            <RadioButton
                    android:id="@+id/radioGroundRegular"
                    android:text="Regular"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="0dp"
                    android:layout_weight=".30"
                    android:layout_height="fill_parent"/>

        </LinearLayout>
            
            
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:paddingBottom="5dp">
            <TextView
                android:text="Trace"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <CheckBox
                android:id="@+id/checkGroundAttackTrace" 
                android:text=""
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content" 
                android:gravity="center" />
            
            <CheckBox
                android:id="@+id/checkGroundDefendTrace" 
                android:text=""
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content" 
                android:gravity="center" />

            <RadioButton
                    android:id="@+id/radioGroundOverrun"
                    android:text="Overrun"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="0dp"
                    android:layout_weight=".30"
                    android:layout_height="fill_parent"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:orientation="horizontal" android:paddingTop="20dp" android:paddingBottom="20dp">

            <TextView
                    android:text="Surprise"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:layout_height="wrap_content"
                    android:gravity="left"/>

            <TextView
                    android:id="@+id/txtGroundSurpise"
                    android:text="NA"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="0dp"
                    android:layout_weight=".30"
                    android:layout_height="wrap_content"
                    android:gravity="left"/>

            <TextView
                    android:text="Results"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:layout_height="wrap_content"
                    android:gravity="left"/>

            <TextView
                    android:id="@+id/txtGroundResults"
                    android:text="NA"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="0dp"
                    android:layout_weight=".30"
                    android:layout_height="wrap_content"
                    android:gravity="left"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp" android:gravity="center_horizontal"
            android:focusable="false">
            
            <ImageView
                android:id="@+id/imgGroundDie1"
                android:src="@drawable/die6_whiteblack_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:clickable="true" android:layout_marginRight="5dp"/>
            <ImageView
                android:id="@+id/imgGroundDie2"
                android:src="@drawable/die6_redwhite_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:clickable="true" android:layout_marginRight="5dp"/>
            
            <ImageView
                android:id="@+id/imgGroundDie3"
                android:src="@drawable/die6_yellowblack_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:clickable="true" android:layout_marginRight="5dp"/>
            
            
            <ImageView
                android:id="@+id/imgGroundDie4"
                android:src="@drawable/die6_blackred_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:clickable="true" android:layout_marginRight="5dp"/>
            <ImageView
                android:id="@+id/imgGroundDie5"
                android:src="@drawable/die6_blackwhite_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:clickable="true" android:layout_marginRight="5dp"/>
            
            <Button
                android:id="@+id/btnGroundDiceRoll"
                android:text="Roll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_button"
                style="@style/button_text" android:paddingLeft="10dp"/>
            
        </LinearLayout>

    </LinearLayout>
</ScrollView>
