<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dice="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:paddingBottom="5dp">
            <TextView
                android:text="Type"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="left" />
            
            <Spinner
                android:id="@+id/spinAirTransportType" 
                android:layout_width="0dp"
                android:layout_weight=".80"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:paddingBottom="5dp">
            <TextView
                android:text="Status"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="left" />
            
            <Spinner
                android:id="@+id/spinAirTransportStatus" 
                android:layout_width="0dp"
                android:layout_weight=".80"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:paddingBottom="5dp">
            <TextView
                android:text="Terrain"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:gravity="left" />
            
            <Spinner
                android:id="@+id/spinAirTransportTerrain" 
                android:layout_width="0dp"
                android:layout_weight=".80"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            
        </LinearLayout>
        
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:paddingBottom="5dp">
            
            <CheckBox
                android:id="@+id/checkAirTransportSoviet" 
                android:text="Soviet; Allied ETO pre 1945"
                android:layout_width="0dp"
                android:layout_weight=".80"
                android:layout_height="wrap_content" 
                android:gravity="center" />
            
        </LinearLayout>
        
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:orientation="horizontal" android:paddingBottom="10dp" android:paddingTop="10dp">

            <TextView
                    android:text="Results"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:layout_height="wrap_content"
                    android:gravity="left"/>

            <TextView
                    android:id="@+id/txtAirTransportResults"
                    android:text="NA"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="0dp"
                    android:layout_weight=".80"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp" android:gravity="center_horizontal"
            android:focusable="false">
            
            <ImageView
                android:id="@+id/imgAirTransportDie1"
                android:src="@drawable/die6_whiteblack_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:clickable="true" android:layout_marginRight="5dp"/>
            <ImageView
                android:id="@+id/imgAirTransportDie2"
                android:src="@drawable/die6_redwhite_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:clickable="true" android:layout_marginRight="5dp"/>
            
            <Button
                android:id="@+id/btnAirTransportDiceRoll"
                android:text="Roll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_button"
                style="@style/button_text" android:paddingLeft="10dp"/>
            
        </LinearLayout>
        
    </LinearLayout>
</ScrollView>
